#include "main.h"

/**
 * _strstr - function that locates a substring
 * @haystack: the string to search
 * @needle: the substring to search for
 *
 * Return: pointer to the beginning of the located substring, or NULL if not found.
 */

char *_strstr(char *haystack, char *needle)
{
        int i, j;

        /* Check if the needle is empty. */
        if (!needle[0])
                return haystack;

        /* Iterate through the haystack, comparing each character to the needle. */
        for (i = 0; haystack[i]; i++)
        {
                for (j = 0; needle[j]; j++)
                {
                        /* If the characters don't match, break out of the loop. */
                        if (haystack[i + j] != needle[j])
                                break;
                }

                /* If we reached the end of the needle without breaking out of the loop, then we found the substring. */
                if (!needle[j])
                        return haystack + i;
        }

        /* The substring was not found. */
        return NULL;
}

